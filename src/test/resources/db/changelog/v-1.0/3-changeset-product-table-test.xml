<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">

    <changeSet id="3.1" author="Mihai">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="product"/>
            </not>
        </preConditions>
        <createTable tableName="product">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="category_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="product_brand" type="VARCHAR(45)">
                <constraints nullable="false"/>
            </column>
            <column name="product_name" type="VARCHAR(45)">
                <constraints nullable="false"/>
            </column>
            <column name="electricity_consumption" type="DOUBLE">
                <constraints nullable="false"/>
            </column>
            <column name="product_description" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="product_width" type="DOUBLE">
                <constraints nullable="false"/>
            </column>
            <column name="product_height" type="DOUBLE">
                <constraints nullable="false"/>
            </column>
            <column name="product_depth" type="DOUBLE">
                <constraints nullable="false"/>
            </column>
            <column name="price" type="INT">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="3.2" author="Mihai">
        <loadData tableName="product" file="db/test-data/product-test-data.csv"/>
    </changeSet>

</databaseChangeLog>