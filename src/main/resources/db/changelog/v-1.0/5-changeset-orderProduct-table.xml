<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.20.xsd">

    <!-- ChangeSet for creating the order table -->
    <changeSet id="5" author="Mihai">
        <createTable tableName="order_product">
            <column name="order_id" type="BIGINT">

            </column>
            <column name="product_name" type="VARCHAR(50)">
                <constraints nullable="false"/>
            </column>
            <column name="quantity" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="price_product" type="DECIMAL(10,2)">
                <constraints nullable="false"/>
            </column>
            <column name="discount_percentages" type="BIGINT" defaultValue="42">
                <constraints nullable="true"/>
            </column>
            <column name="price_discount" type="DECIMAL(10,2)" defaultValue='42.00'>
                <constraints nullable="true"/>
            </column>
            <column name="VAT" type="BIGINT" defaultValue="20">
                <constraints nullable="true"/>
            </column>
            <column name="price_with_VAT" type="DECIMAL(10,2)" defaultValue="42.00">
                <constraints nullable="true"/>
            </column>
            <column name="parent_product_id" type="BIGINT">
                <constraints nullable="true"/>
            </column>
            <column name="product_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <!-- Data loading for MySQL -->
    <changeSet id="5.1" author="Mihai">
        <preConditions onFail="MARK_RAN">
            <dbms type="mysql"/>
        </preConditions>
        <loadData tableName="order_product" file="db/data/mysql/order_product-data.csv"/>
    </changeSet>

    <!-- Data loading for HSQLDB -->
    <changeSet id="5.2" author="Mihai">
        <preConditions onFail="MARK_RAN">
            <dbms type="hsqldb"/>
        </preConditions>
        <loadData tableName="order_product" file="db/data/hsqldb/order_product-data.csv"/>
    </changeSet>
</databaseChangeLog>