<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">

    <!-- ChangeSet for creating the order table -->
    <changeSet id="4" author="Mihai">
        <createTable tableName="client_order">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true"/>
            </column>
            <column name="user_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="created_date" type="TIMESTAMP">
                <constraints nullable="false"/>
            </column>
            <column name="updated_date" type="TIMESTAMP">
                <constraints nullable="false"/>
            </column>
            <column name="order_status" type="VARCHAR(50)">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <!-- Data loading for MySQL -->
    <changeSet id="4.1" author="Mihai">
        <preConditions onFail="MARK_RAN">
            <dbms type="mysql"/>
        </preConditions>
        <loadData tableName="client_order" file="db/data/mysql/client_order-data.csv"/>
    </changeSet>

    <!-- Data loading for HSQLDB -->
    <changeSet id="4.2" author="Mihai">
        <preConditions onFail="MARK_RAN">
            <dbms type="hsqldb"/>
        </preConditions>
        <loadData tableName="client_order" file="db/data/hsqldb/client_order-data.csv"/>
    </changeSet>
</databaseChangeLog>